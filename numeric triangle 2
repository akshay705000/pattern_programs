a=int(input("enter height of right angled triangle"))
for x in range(1,a+1):
 n=x+1
 for y in range(a-x,0,-1):
  print(" ",end="")
 if x==1:
  print("1",end="")
 else: 
  for z in range(1,2*x,1): 
   if z <= x:
    n=n-1
   else:
    n=n+1
   print(n,end="")  
 print() 


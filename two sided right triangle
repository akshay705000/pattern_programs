a=int(input("enter height of right angled triangle"))
for x in range(1,a+1):
 n=1
 for y in range(1,x+1):
  print(n,end="")
  n=n+1 
 print()
for z in range(a,1,-1):
 n=1
 for p in range(1,z):
  print(n,end="")
  n=n+1 
 print() 
 
 
 
